{
  "designSystem": {
    "name": "Truck Tracking & Expense Management System",
    "version": "1.0.0",
    "description": "Complete design system for admin and driver interfaces",
    "pages": {
      "admin": [
        {
          "name": "Admin Dashboard",
          "url": "/admin/dashboard",
          "purpose": "Overview of fleet operations, KPIs, and alerts",
          "wireframe": {
            "layout": "4-column grid with header navigation",
            "panels": [
              {
                "name": "Header Panel",
                "content": "Company logo, user menu, notifications",
                "position": "top-full-width"
              },
              {
                "name": "KPI Cards Row",
                "content": "Total trucks, active trips, pending expenses, monthly revenue",
                "position": "top-grid-4-cols"
              },
              {
                "name": "Fleet Status Panel",
                "content": "Live truck status map with color-coded markers",
                "position": "left-half"
              },
              {
                "name": "Recent Activities Panel", 
                "content": "Timeline of recent trips, expenses, alerts",
                "position": "center-quarter"
              },
              {
                "name": "Financial Summary Panel",
                "content": "Revenue charts, expense breakdown, profit margins",
                "position": "right-quarter"
              },
              {
                "name": "Quick Actions Panel",
                "content": "New Trip, Approve Expenses, Generate Report buttons",
                "position": "bottom-full-width"
              }
            ]
          },
          "components": ["AppShell", "KPICard", "MapComponent", "DataTable", "LineChart", "Button", "Toast"],
          "keyFeatures": ["Fleet metrics", "Active trips", "Maintenance alerts", "Financial summary"]
        },
        {
          "name": "Fleet Management",
          "url": "/admin/fleet",
          "purpose": "Manage trucks, assignments, and status",
          "wireframe": {
            "layout": "Data table with filters and action panels",
            "panels": [
              {
                "name": "Filter Bar",
                "content": "Search, status filters, assignment filters, sort options",
                "position": "top-full-width"
              },
              {
                "name": "Data Table",
                "content": "Truck ID, make/model, driver assignment, status, last maintenance, actions",
                "position": "main-content"
              },
              {
                "name": "Side Panel",
                "content": "Detailed truck info, maintenance history, assignment history",
                "position": "right-sidebar-triggered"
              },
              {
                "name": "Bulk Actions Bar",
                "content": "Multi-select operations, export options", 
                "position": "bottom-when-selected"
              }
            ]
          },
          "components": ["DataTable", "FilterSidebar", "Modal", "BulkActions", "SearchBar", "StatusBadge"],
          "keyFeatures": ["Truck listing", "Driver assignments", "Maintenance scheduling"]
        },
        {
          "name": "Driver Management", 
          "url": "/admin/drivers",
          "purpose": "Manage driver profiles, licenses, and performance",
          "wireframe": {
            "layout": "Grid view with profile cards and detail modal",
            "panels": [
              {
                "name": "Filter Toolbar",
                "content": "Search drivers, status filter, performance filter",
                "position": "top-toolbar"
              },
              {
                "name": "Driver Grid",
                "content": "Profile cards with photo, name, status, recent activity",
                "position": "main-grid-3-cols"
              },
              {
                "name": "Driver Detail Modal",
                "content": "Full profile, license info, performance metrics, trip history",
                "position": "overlay-modal"
              }
            ]
          },
          "components": ["DataTable", "StatusBadge", "Modal", "FormInput", "DatePicker"],
          "keyFeatures": ["Driver profiles", "License tracking", "Performance metrics"]
        },
        {
          "name": "Trip Management",
          "url": "/admin/trips", 
          "purpose": "Monitor all trips, routes, and completion status",
          "wireframe": {
            "layout": "Map view with trip overlay and control panel",
            "panels": [
              {
                "name": "Map Container",
                "content": "Full-width map showing active routes and truck positions",
                "position": "main-fullscreen"
              },
              {
                "name": "Trip Control Panel",
                "content": "Trip filters, status legend, refresh controls",
                "position": "overlay-top-right"
              },
              {
                "name": "Trip List Sidebar",
                "content": "Scrollable list of trips with summary cards",
                "position": "left-sidebar-collapsible"
              },
              {
                "name": "Trip Detail Modal",
                "content": "Route details, driver info, cargo info, timeline",
                "position": "overlay-modal"
              }
            ]
          },
          "components": ["MapComponent", "TripCard", "Modal", "ProgressBar", "StatusBadge"],
          "keyFeatures": ["Trip overview", "Route tracking", "Completion rates"]
        },
        {
          "name": "Expense Management",
          "url": "/admin/expenses",
          "purpose": "Review and approve expenses, receipts, and reimbursements", 
          "wireframe": {
            "layout": "Split view with list and detail panels",
            "panels": [
              {
                "name": "Filter Sidebar",
                "content": "Date range, driver filter, category filter, status filter",
                "position": "left-sidebar-fixed"
              },
              {
                "name": "Expense List",
                "content": "Thumbnail, description, amount, driver, date, status, priority",
                "position": "center-list-scrollable"
              },
              {
                "name": "Detail Panel",
                "content": "Full receipt image, expense details, approval workflow buttons",
                "position": "right-panel-fixed"
              },
              {
                "name": "Batch Processing",
                "content": "Select multiple expenses, bulk approve/reject options",
                "position": "bottom-toolbar-contextual"
              }
            ]
          },
          "components": ["ExpenseCard", "FileUpload", "ApprovalButtons", "FilterSidebar", "BulkActions"],
          "keyFeatures": ["Expense approval workflow", "Receipt verification", "Reimbursement processing"]
        },
        {
          "name": "Invoicing",
          "url": "/admin/invoicing",
          "purpose": "Generate and manage client invoices",
          "wireframe": {
            "layout": "Invoice builder with preview and management list",
            "panels": [
              {
                "name": "Invoice Builder",
                "content": "Client selection, trip selection, line items, totals",
                "position": "left-half-form"
              },
              {
                "name": "Invoice Preview",
                "content": "Real-time preview of invoice layout and content",
                "position": "right-half-preview"
              },
              {
                "name": "Invoice Management List",
                "content": "Existing invoices, status, payment tracking",
                "position": "bottom-full-table"
              }
            ]
          },
          "components": ["FormInput", "FormSelect", "DataTable", "Button", "Modal"],
          "keyFeatures": ["Invoice creation", "Billing cycles", "Payment tracking"]
        },
        {
          "name": "Reports & Analytics",
          "url": "/admin/reports",
          "purpose": "Financial reports, performance analytics, compliance",
          "wireframe": {
            "layout": "Dashboard with configurable chart widgets",
            "panels": [
              {
                "name": "Report Builder",
                "content": "Date range, filters, chart type selection",
                "position": "top-toolbar"
              },
              {
                "name": "Chart Grid",
                "content": "Configurable chart widgets for different metrics",
                "position": "main-grid-responsive"
              },
              {
                "name": "Export Options",
                "content": "PDF, Excel, CSV export with custom formatting",
                "position": "floating-action-menu"
              }
            ]
          },
          "components": ["LineChart", "BarChart", "PieChart", "MetricDashboard", "DatePicker", "Button"],
          "keyFeatures": ["Custom reports", "Data exports", "Compliance documentation"]
        }
      ],
      "driver": [
        {
          "name": "Driver Dashboard",
          "url": "/driver/dashboard",
          "purpose": "Personal overview of trips, earnings, and notifications",
          "wireframe": {
            "layout": "Single column mobile-first with key widgets",
            "panels": [
              {
                "name": "Header Panel",
                "content": "Driver name, profile photo, current status indicator",
                "position": "top-header"
              },
              {
                "name": "Current Trip Card", 
                "content": "Active trip details, progress bar, ETA, route map thumbnail",
                "position": "primary-card"
              },
              {
                "name": "Today's Summary",
                "content": "Trips completed, miles driven, estimated earnings",
                "position": "stats-row-3-cols"
              },
              {
                "name": "Quick Actions",
                "content": "Start Trip, Submit Expense, Vehicle Check buttons",
                "position": "action-buttons-grid"
              },
              {
                "name": "Notifications Panel",
                "content": "Messages from dispatch, expense approvals, upcoming maintenance",
                "position": "notification-list"
              },
              {
                "name": "Recent Trips",
                "content": "Last 5 trips with basic details and status",
                "position": "trip-history-list"
              }
            ]
          },
          "components": ["TripCard", "KPICard", "ProgressBar", "StatusBadge", "Button", "DriverBottomNav"],
          "keyFeatures": ["Trip summary", "Earnings tracker", "Alerts"]
        },
        {
          "name": "Active Trip",
          "url": "/driver/trip/active",
          "purpose": "Real-time trip management and tracking",
          "wireframe": {
            "layout": "Map-focused with overlay controls",
            "panels": [
              {
                "name": "Navigation Map",
                "content": "Full-screen GPS navigation with route overlay",
                "position": "fullscreen-map"
              },
              {
                "name": "Trip Controls",
                "content": "Start/pause trip, milestone updates, emergency contact",
                "position": "bottom-control-bar"
              },
              {
                "name": "Progress Overlay",
                "content": "Trip progress, ETA, distance remaining",
                "position": "top-overlay-card"
              },
              {
                "name": "Quick Actions",
                "content": "Photo capture, note addition, break timer",
                "position": "floating-action-buttons"
              }
            ]
          },
          "components": ["MapComponent", "ProgressBar", "Button", "FloatingActionButton", "Toast"],
          "keyFeatures": ["GPS tracking", "Trip progress", "Milestone updates"]
        },
        {
          "name": "Trip History",
          "url": "/driver/trips",
          "purpose": "View completed and upcoming trips",
          "wireframe": {
            "layout": "List view with filter options",
            "panels": [
              {
                "name": "Filter Tabs",
                "content": "Upcoming, Completed, All trips filter tabs",
                "position": "top-tab-navigation"
              },
              {
                "name": "Trip List",
                "content": "Trip cards with route, date, earnings, status",
                "position": "scrollable-list"
              },
              {
                "name": "Trip Detail Modal",
                "content": "Detailed trip info, route map, documentation",
                "position": "overlay-modal"
              }
            ]
          },
          "components": ["TripCard", "Modal", "StatusBadge", "Button"],
          "keyFeatures": ["Trip list", "Trip details", "Documentation"]
        },
        {
          "name": "Expense Submission",
          "url": "/driver/expenses",
          "purpose": "Submit receipts and expense claims",
          "wireframe": {
            "layout": "Form-based with receipt upload and categorization",
            "panels": [
              {
                "name": "Upload Area",
                "content": "Drag-drop receipt image upload with camera option",
                "position": "top-upload-zone"
              },
              {
                "name": "Expense Form",
                "content": "Amount, category dropdown, description, date picker",
                "position": "form-fields"
              },
              {
                "name": "Receipt Preview",
                "content": "Thumbnail with crop/rotate options",
                "position": "image-preview"
              },
              {
                "name": "Auto-categorization",
                "content": "AI suggestions based on receipt content",
                "position": "suggestion-chips"
              },
              {
                "name": "Submission Queue",
                "content": "List of pending submissions with edit/delete options",
                "position": "bottom-list"
              }
            ]
          },
          "components": ["FileUpload", "FormInput", "FormSelect", "DatePicker", "Button", "ExpenseCard"],
          "keyFeatures": ["Receipt upload", "Expense categorization", "Submission workflow"]
        },
        {
          "name": "Vehicle Inspection",
          "url": "/driver/inspection",
          "purpose": "Pre-trip and post-trip vehicle checks",
          "wireframe": {
            "layout": "Checklist form with photo capture",
            "panels": [
              {
                "name": "Inspection Type",
                "content": "Pre-trip or post-trip selection tabs",
                "position": "top-tabs"
              },
              {
                "name": "Checklist Items",
                "content": "Vehicle components with pass/fail/na options",
                "position": "main-checklist"
              },
              {
                "name": "Photo Capture",
                "content": "Camera interface for issue documentation",
                "position": "camera-overlay"
              },
              {
                "name": "Issue Reporting",
                "content": "Description field and severity selection",
                "position": "issue-form"
              }
            ]
          },
          "components": ["FormInput", "FileUpload", "Button", "StatusBadge", "FormWizard"],
          "keyFeatures": ["Inspection checklists", "Photo uploads", "Issue reporting"]
        },
        {
          "name": "Earnings",
          "url": "/driver/earnings",
          "purpose": "View payment history and pending earnings", 
          "wireframe": {
            "layout": "Financial dashboard with payment breakdown",
            "panels": [
              {
                "name": "Earnings Summary",
                "content": "Current period earnings, YTD total, pending amount",
                "position": "top-metrics-row"
              },
              {
                "name": "Payment History",
                "content": "List of payments with dates, amounts, methods",
                "position": "main-table"
              },
              {
                "name": "Earnings Breakdown",
                "content": "Chart showing earnings by trip type, time period",
                "position": "chart-section"
              },
              {
                "name": "Tax Documents",
                "content": "Download links for 1099s and payment statements",
                "position": "document-links"
              }
            ]
          },
          "components": ["KPICard", "DataTable", "LineChart", "Button"],
          "keyFeatures": ["Payment statements", "Tax documents", "Earning summaries"]
        },
        {
          "name": "Profile",
          "url": "/driver/profile",
          "purpose": "Manage personal information and preferences",
          "wireframe": {
            "layout": "Settings form with sections",
            "panels": [
              {
                "name": "Profile Photo",
                "content": "Avatar upload with crop functionality",
                "position": "top-center"
              },
              {
                "name": "Personal Information",
                "content": "Name, contact info, emergency contact forms",
                "position": "personal-section"
              },
              {
                "name": "License Details",
                "content": "License number, expiry, endorsements",
                "position": "license-section"
              },
              {
                "name": "Notification Settings",
                "content": "Email, SMS, push notification preferences",
                "position": "notification-section"
              }
            ]
          },
          "components": ["FormInput", "FileUpload", "FormSelect", "Button", "DatePicker"],
          "keyFeatures": ["Contact info", "License details", "Notification settings"]
        }
      ]
    },
    "components": {
      "layout": [
        {
          "name": "AppShell",
          "responsibility": "Main application wrapper with navigation and content areas",
          "props": ["children", "navigation", "user"],
          "variants": ["admin", "driver"]
        },
        {
          "name": "AdminSidebar", 
          "responsibility": "Left navigation for admin pages with collapsible sections",
          "props": ["menuItems", "collapsed", "onToggle"],
          "variants": ["expanded", "collapsed"]
        },
        {
          "name": "DriverBottomNav",
          "responsibility": "Mobile bottom navigation for driver app",
          "props": ["activeTab", "onTabChange"],
          "variants": ["default"]
        },
        {
          "name": "PageHeader",
          "responsibility": "Consistent page headers with breadcrumbs and actions",
          "props": ["title", "subtitle", "breadcrumbs", "actions"],
          "variants": ["simple", "withActions", "withBreadcrumbs"]
        },
        {
          "name": "ContentGrid",
          "responsibility": "Responsive grid layout for dashboard widgets",
          "props": ["columns", "gap", "children"],
          "variants": ["auto", "fixed", "responsive"]
        }
      ],
      "dataDisplay": [
        {
          "name": "DataTable",
          "responsibility": "Sortable, filterable table with pagination and row actions",
          "props": ["data", "columns", "sortable", "filterable", "pagination", "actions"],
          "variants": ["simple", "complex", "compact"]
        },
        {
          "name": "KPICard",
          "responsibility": "Metric display card with trend indicators and color coding",
          "props": ["title", "value", "trend", "trendDirection", "color"],
          "variants": ["basic", "withTrend", "large"]
        },
        {
          "name": "TripCard",
          "responsibility": "Compact trip information display with status indicators",
          "props": ["tripData", "showActions", "variant"],
          "variants": ["summary", "detailed", "minimal"]
        },
        {
          "name": "ExpenseCard",
          "responsibility": "Receipt thumbnail with expense details and status",
          "props": ["expense", "showApproval", "onApprove", "onReject"],
          "variants": ["pending", "approved", "rejected"]
        },
        {
          "name": "StatusBadge",
          "responsibility": "Color-coded status indicators for various entities",
          "props": ["status", "size", "variant"],
          "variants": ["success", "warning", "error", "info", "neutral"]
        },
        {
          "name": "ProgressBar",
          "responsibility": "Linear progress indicator for trips and tasks",
          "props": ["value", "max", "label", "showPercentage"],
          "variants": ["linear", "circular", "stepped"]
        },
        {
          "name": "MapComponent",
          "responsibility": "Interactive map with markers and route overlays",
          "props": ["center", "zoom", "markers", "routes", "controls"],
          "variants": ["navigation", "overview", "tracking"]
        }
      ],
      "forms": [
        {
          "name": "FormInput",
          "responsibility": "Styled text input with validation states",
          "props": ["type", "label", "error", "placeholder", "required"],
          "variants": ["text", "email", "password", "number", "search"]
        },
        {
          "name": "FormSelect",
          "responsibility": "Dropdown select with search and multi-select options",
          "props": ["options", "multiple", "searchable", "placeholder"],
          "variants": ["single", "multiple", "searchable"]
        },
        {
          "name": "DatePicker",
          "responsibility": "Calendar date selection with range options",
          "props": ["value", "range", "minDate", "maxDate", "format"],
          "variants": ["single", "range", "month", "year"]
        },
        {
          "name": "FileUpload",
          "responsibility": "Receipt and document upload with preview",
          "props": ["accept", "multiple", "maxSize", "onUpload"],
          "variants": ["drag-drop", "button", "camera"]
        },
        {
          "name": "FormWizard",
          "responsibility": "Multi-step form navigation for complex workflows",
          "props": ["steps", "currentStep", "onNext", "onPrevious"],
          "variants": ["linear", "branched"]
        },
        {
          "name": "SearchBar",
          "responsibility": "Global and contextual search with autocomplete",
          "props": ["placeholder", "suggestions", "onSearch", "filters"],
          "variants": ["global", "contextual", "advanced"]
        }
      ],
      "actions": [
        {
          "name": "Button",
          "responsibility": "Primary, secondary, and tertiary button variants",
          "props": ["variant", "size", "disabled", "loading", "icon"],
          "variants": ["primary", "secondary", "tertiary", "danger", "ghost"]
        },
        {
          "name": "ActionMenu",
          "responsibility": "Dropdown menu for row-level actions",
          "props": ["items", "trigger", "placement"],
          "variants": ["default", "compact"]
        },
        {
          "name": "FloatingActionButton",
          "responsibility": "Mobile-friendly primary action button",
          "props": ["icon", "label", "position"],
          "variants": ["default", "extended"]
        },
        {
          "name": "BulkActions",
          "responsibility": "Multi-select action bar for batch operations",
          "props": ["selectedCount", "actions", "onClear"],
          "variants": ["fixed", "sticky"]
        },
        {
          "name": "ApprovalButtons",
          "responsibility": "Approve/reject workflow controls",
          "props": ["onApprove", "onReject", "disabled"],
          "variants": ["horizontal", "vertical"]
        }
      ],
      "feedback": [
        {
          "name": "Toast",
          "responsibility": "Success, error, and info notifications",
          "props": ["type", "message", "duration", "actions"],
          "variants": ["success", "error", "warning", "info"]
        },
        {
          "name": "Modal",
          "responsibility": "Overlay dialogs for confirmations and detailed views",
          "props": ["isOpen", "onClose", "size", "title", "children"],
          "variants": ["small", "medium", "large", "fullscreen"]
        },
        {
          "name": "LoadingSpinner",
          "responsibility": "Loading states for async operations",
          "props": ["size", "color", "overlay"],
          "variants": ["small", "medium", "large", "overlay"]
        },
        {
          "name": "EmptyState",
          "responsibility": "Illustrations and messaging for empty data sets",
          "props": ["illustration", "title", "description", "action"],
          "variants": ["noData", "noResults", "error"]
        },
        {
          "name": "ErrorBoundary",
          "responsibility": "Error handling and retry mechanisms",
          "props": ["fallback", "onRetry"],
          "variants": ["default", "minimal"]
        }
      ],
      "charts": [
        {
          "name": "LineChart",
          "responsibility": "Revenue trends and performance metrics",
          "props": ["data", "xAxis", "yAxis", "colors"],
          "variants": ["single", "multiple", "area"]
        },
        {
          "name": "PieChart",
          "responsibility": "Expense category breakdowns",
          "props": ["data", "colors", "showLabels"],
          "variants": ["pie", "doughnut"]
        },
        {
          "name": "BarChart",
          "responsibility": "Comparative data visualization",
          "props": ["data", "orientation", "stacked"],
          "variants": ["vertical", "horizontal", "stacked"]
        },
        {
          "name": "MetricDashboard",
          "responsibility": "Combined chart widgets for analytics",
          "props": ["widgets", "layout", "filters"],
          "variants": ["dashboard", "report"]
        }
      ]
    },
