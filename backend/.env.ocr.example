# OCR Service Configuration

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
# Alternative: Use GOOGLE_APPLICATION_CREDENTIALS environment variable

# AWS S3 Configuration (for file access)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.8
OCR_MAX_RETRIES=2
OCR_TIMEOUT_MS=30000

# Tesseract Fallback Configuration
TESSERACT_WORKER_OPTIONS={
  "langPath": "https://tessdata.projectnaptha.com/4.0.0",
  "logger": function(m) { console.log(m); }
}

# Example environment variables for development:
# GOOGLE_CLOUD_PROJECT_ID=truck-monitoring-ocr
# GOOGLE_CLOUD_KEY_FILE=./config/gcp-service-account.json
# AWS_S3_BUCKET=truck-receipts-bucket
# OCR_CONFIDENCE_THRESHOLD=0.75
