{
  "name": "truck-monitoring-backend",
  "version": "1.0.0",
  "description": "Backend API for truck monitoring system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "mock": "tsx watch src/mockServer.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=src",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit -- --coverage --watchAll=false && npm run test:integration -- --watchAll=false",
    "test:anomaly": "jest src/anomaly/test/",
    "anomaly-demo": "ts-node src/anomaly/demo/anomaly.demo.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "setup": "npm install && npm run db:generate"
  },
  "keywords": [
    "truck",
    "monitoring",
    "api",
    "express",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.451.0",
    "@aws-sdk/client-ses": "^3.890.0",
    "@aws-sdk/s3-request-presigner": "^3.451.0",
    "@google-cloud/vision": "^5.3.3",
    "@prisma/client": "^5.4.2",
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.5",
    "commander": "^14.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^12.0.0",
    "prom-client": "^15.1.3",
    "@sentry/node": "^8.34.0",
    "@sentry/profiling-node": "^8.34.0",
    "tesseract.js": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.4",
    "@types/commander": "^2.12.0",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.19.15",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.1.2",
    "playwright": "^1.55.0",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
